{
  "extends": "standard",
  "parserOptions": { "ecmaVersion": 6 },
  "env": { "browser": true, "es6": true },
  "globals": { "Polymer": true, "Microformats": true, "Freezer": true },
  "rules": {
    "no-tabs": "off",
    "indent": ["error", "tab"],
    "comma-dangle": ["error", "only-multiline"]
  }
}
